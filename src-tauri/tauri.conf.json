{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "deptox",
  "version": "0.1.11",
  "identifier": "com.deptox.menubar",
  "build": {
    "beforeDevCommand": "pnpm vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: http://asset.localhost data: blob:",
        "connect-src": "ipc: http://ipc.localhost"
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "dmg",
      "app"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Clean up dependency directories to free disk space",
    "longDescription": "deptox helps developers reclaim disk space by finding and removing node_modules, vendor, Pods, .venv, and target directories across your filesystem.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "11.0",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/alexwhin/deptox/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIwRjRFNUY5NURBNTU0NUUKUldSZVZLVmQrZVgwc0FZYzJ4ekNxR0F6RzlINW9DZ0N6R1V0V3dPN0tnSjZBaDBJUGRlZVNFd2gK"
    }
  }
}
